{
    "manifest_version": 3,
    "name": "DoulBrowser COMPLETE",
    "version": "2.0.0",
    "description": "Extension de téléchargement DoulBrowser (Version Clean)",
    "author": "DoulBrowser Team",
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
        "webRequest",
        "downloads",
        "storage",
        "tabs",
        "activeTab",
        "scripting",
        "cookies"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ]
}
{
    "manifest_version": 3,
    "name": "DoulBrowser COMPLETE",
    "version": "1.1.2",
    "description": "Extension de téléchargement DoulBrowser (Version Clean)",
    "author": "DoulBrowser Team",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "permissions": [
        "webRequest",
        "downloads",
        "storage",
        "tabs",
        "activeTab",
        "scripting",
        "cookies"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "bridge.js"
            ],
            "world": "MAIN",
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "bridge.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}